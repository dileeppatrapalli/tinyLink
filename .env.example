# Example environment variables for TinyLink
# Copy this to .env for local development and set real values in your host (Render/Heroku/Railway/Neon)

# Postgres connection string, e.g. postgres://user:pass@host:5432/dbname
DATABASE_URL=

# Optional test database connection string
DATABASE_URL_TEST=

# Node environment: development | production | test
NODE_ENV=development

# App port (Render/Heroku set this automatically)
PORT=8080

# Rate limiter settings (milliseconds window, max requests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
# Postgres DB URLs (production/development/test)
DATABASE_URL=postgres://user:password@localhost:5432/tinylink_db
DATABASE_URL_TEST=postgres://user:password@localhost:5432/tinylink_test_db

# Public base URL for short links (no trailing slash)
BASE_URL=http://localhost:3000

# Server port
PORT=3000

# Optional: rate limit for POST /api/links
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

